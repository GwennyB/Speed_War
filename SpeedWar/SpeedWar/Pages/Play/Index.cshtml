@page
@model SpeedWar.Pages.Play.IndexModel
@{
}

<link rel="stylesheet" type="text/css" href="~/Play.css">
<h1>Speed War</h1>
<button id="easy-button" class="diff-button"> Easy </button>
<button id="hard-button" class="diff-button"> Hard </button>

@*DO NOT DELETE ME... I'M IMPORTANT!!!*@
<p id="player" display="none">@Model.Player.Name</p>
<div id="deck">
    <div id="computerdeck">
        <img style="width:60px;height:100px" src="~/Assets/PNG/yellow_back.png" />
        <img style="width:60px;height:100px" id="computer-collection" src="~/Assets/PNG/null.jpg" />
    </div>

    <div id="first-card">
        <img id="img1" style="width:100%;height:auto" src="~/Assets/PNG/null.jpg" />
    </div>
    <div id="second-card">
        <img id="img2" style="width:100%;height:auto" src="~/Assets/PNG/null.jpg" />
    </div>
    <div id="userdeck">
        <img style="width:60px;height:100px" src="~/Assets/PNG/blue_back.png" />
        <img style="width:60px;height:100px" id="user-collection" src="~/Assets/PNG/null.jpg" />
    </div>
</div>
<div id="winner-page" class="hidden">
    <p><span id="winner-id"></span> wins! </p>
    <button id="winner-button" asp-page="Play/Index">Play Again?</button>
</div>
<div id="slap-page" class="hidden">
    <p>SLAP</p>
</div>



